{
  "name": "gexa-saas",
  "version": "1.2.0",
  "description": "Gexa Servicing as a Service",
  "scripts": {
    "start": "node ./bin/www",
    "test": "mocha",
    "swagger_join": "swagger-merger -i ./specs/spec.json -o ./specs/swagger.json",
    "validation_join": "swagger-merger -i ./specs/validation.spec.json -o ./specs/validation.json",
    "release": "standard-version && git push && git push --tags"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg"
    }
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@neer-bitbucket:7999/gd/gexa-saas.git"
  },
  "author": "Ryan Purcell",
  "license": "ISC",
  "dependencies": {
    "ajv": "^6.10.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "lodash": "^4.17.11",
    "log-driver": "^1.2.7",
    "monk": "^6.0.6",
    "morgan": "^1.9.1",
    "morgan-json": "^1.1.0",
    "superagent": "^4.1.0",
    "superagent-prefix": "0.0.2",
    "swagger-ui-express": "^4.0.2"
  },
  "devDependencies": {
    "@octopusdeploy/grunt-octo": "0.0.50",
    "chai": "^4.2.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "grunt": "^1.0.3",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-gitinfo": "^0.1.8",
    "husky": "^1.3.1",
    "load-grunt-tasks": "^4.0.0",
    "mocha": "^6.1.2",
    "mocha-bamboo-reporter": "^1.1.1",
    "nodemon": "^1.18.10",
    "standard-version": "^5.0.1",
    "swagger-merger": "^1.4.3",
    "validate-commit-msg": "^2.14.0"
  }
}
