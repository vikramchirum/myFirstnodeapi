{
  "name": "gexa-saas",
  "version": "1.4.0",
  "description": "Gexa Servicing as a Service",
  "scripts": {
    "start": "node ./bin/www",
    "test": "mocha",
    "swagger_join": "swagger-merger -i ./specs/spec.json -o ./specs/swagger.json",
    "validation_join": "swagger-merger -i ./specs/validation.spec.json -o ./specs/validation.json",
    "release": "standard-version && git push && git push --tags"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg"
    }
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@neer-bitbucket:7999/gd/gexa-saas.git"
  },
  "author": "Ryan Purcell",
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^5.6.2",
    "ajv": "^6.10.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "gexa.http_client.basic_auth": "git+http://neer-bitbucket:7990/scm/gd/gexa.http_client.basic_auth.git#v1.1.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.14",
    "log-driver": "^1.2.7",
    "monk": "^6.0.6",
    "morgan": "^1.9.1",
    "morgan-json": "^1.1.0",
    "node-forge": "^0.7.6",
    "superagent": "^4.1.0",
    "superagent-prefix": "0.0.2",
    "swagger-ui-express": "^4.0.7",
    "winston": "2.4.0",
    "winston-mongodb": "3.0.0"
  },
  "devDependencies": {
    "@octopusdeploy/gulp-octo": "0.0.12",
    "chai": "^4.2.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "del": "^4.1.1",
    "git-rev-sync": "^1.12.0",
    "gulp": "^4.0.2",
    "husky": "^1.3.1",
    "minimist": "^1.2.0",
    "mocha": "^6.1.4",
    "mocha-bamboo-reporter": "^1.1.1",
    "standard-version": "^5.0.2",
    "swagger-merger": "^1.4.3",
    "validate-commit-msg": "^2.14.0"
  }
}
