{
  "tags": [
    "customer"
  ],
  "summary": "Retrieves all customers from the MongoDB",
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "$ref": "#/components/schemas/customer"
        }
      }
    }
  },
  "responses": {
    "400": {
      "description": "Bad Request",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/error_list"
          }
        }
      }
    },
    "200": {
      "description": "Returns a list of matching customer",
      "content": {
        "application/json": {
          "schema": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/customer_search_result"
            }
          }
        }
      }
    },
    "401": {
      "description": "Unauthorized"
    },
    "404": {
      "description": "customer not found"
    }
  }
}
