{
  "tags": [
    "customer_accounts",
    "payments"
  ],
  "summary": "Retrieves payment methods for a customer by id",
  "parameters": [
    {
      "name": "id",
      "in": "path",
      "description": "id of customer to fetch payment methods for",
      "required": true,
      "schema": {
        "type": "string"
      }
    }
  ],
  "responses": {
    "400": {
      "description": "Bad Request",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/error_list"
          }
        }
      }
    },
    "200": {
      "description": "200 returns a customer account",
      "content": {
        "application/json": {
          "schema": {
            "type": "array",
            "items": {
              "$ref": "../../definitions/payments/pay_methods/pay_method.json"
            }
          }
        }
      }
    },
    "401": {
      "description": "Unauthorized"
    },
    "404": {
      "description": "No payment methods not found"
    }
  }
}
