{
  "tags": [
    "invoices"
  ],
  "summary": "Retrieves invoices by id or service acccount id",
  "parameters": [
    {
      "name": "service_account_id",
      "in": "query",
      "description": "id of service account to fetch invoices for",
      "schema": {
        "type": "string"
      }
    },
    {
      "name": "invoice_id",
      "in": "query",
      "description": "id of invoice to fetch",
      "schema": {
        "type": "string"
      }
    }
  ],
  "responses": {
    "400": {
      "description": "Bad Request",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/error_list"
          }
        }
      }
    },
    "200": {
      "description": "200 returns a list of invoices",
      "content": {
        "application/json": {
          "schema": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/invoice"
            }
          }
        }
      }
    },
    "401": {
      "description": "Unauthorized"
    },
    "404": {
      "description": "Invoice not found"
    }
  }
}
