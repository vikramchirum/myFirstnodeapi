              ]
            },
            "Area_Code": {
              "type": "string",
              "minLength": 3,
              "maxLength": 3,
              "pattern": "^\\d{3}$"
            },
            "Number": {
              "type": "string",
              "minLength": 7,
              "maxLength": 7,
              "pattern": "^\\d{7}$"
            },
            "Extension": {
              "type": "string"
            },
            "Agree_To_Marketing": {
              "type": "boolean"
            }
          },
          "required": [
            "Type",
            "Area_Code",
            "Number"
          ]
        },
        "Question": {
          "type": "string"
        }
      },
      "required": [
        "Question",
        "DaytimePhone"
      ]
    },
