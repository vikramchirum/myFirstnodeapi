          "type": "string"
        },
        "SSN": {
          "type": "string"
        },
        "DL": {
          "type": "string"
        },
        "PhoneNumber": {
          "type": "string"
        },
        "Email": {
          "type": "string",
          "format": "email"
        },
        "ESIID": {
          "type": "string"
        }
      }
    },
    "customer_account_add_note_request": {
      "type": "object",
      "properties": {
        "Note": {
          "type": "string"
        },
        "Note_Type": {
          "type": "string",
