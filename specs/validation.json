{
  "definitions": {
    "customer_account_patch": {
      "type": "object",
      "properties": {
        "Email": {
          "type": "string",
          "format": "email"
        },
        "Primary_Phone_Number": {
          "type": "object",
          "properties": {
            "Type": {
              "type": "string",
              "enum": [
                "Landline",
                "Mobile"
              ]
            },
            "Area_Code": {
              "type": "string",
              "minLength": 3,
              "maxLength": 3,
              "pattern": "^\\d{3}$"
            },
            "Number": {
              "type": "string",
              "minLength": 7,
              "maxLength": 7,
              "pattern": "^\\d{7}$"
            },
            "Extension": {
              "type": "string"
            },
            "Agree_To_Marketing": {
              "type": "boolean"
            }
          },
          "required": [
            "Type",
            "Area_Code",
            "Number"
          ]
        }
      },
      "anyOf": [
        {
          "required": [
            "Email"
          ]
        },
        {
          "required": [
            "Primary_Phone_Number"
          ]
        }
      ]
    },
    "generate_token_request": {
      "type": "object",
      "properties": {
        "Name": {
          "type": "string"
        },
        "Expires_In": {
          "type": "integer",
          "max": 86400
        }
      },
      "required": [
        "Name"
      ]
    },
    "login_request": {
      "type": "object",
      "properties": {
        "Username": {
          "type": "string"
        },
        "Password": {
          "type": "string"
        }
      }
    },
    "payment_extension_request": {
      "type": "object",
      "properties": {
        "Extend": {
          "type": "boolean"
        }
      }
    },
    "payment_request": {
      "oneOf": [
        {
          "allOf": [
            {
              "type": "object",
              "properties": {
                "Amount": {
                  "type": "number",
                  "min": 10,
                  "max": 3000
                }
              },
              "required": [
                "Amount"
              ]
            },
            {
              "type": "object",
              "properties": {
                "One_Time_Token": {
                  "type": "string"
                }
              },
              "required": [
                "One_Time_Token"
              ]
            }
          ]
        },
        {
          "allOf": [
            {
              "type": "object",
              "properties": {
                "Amount": {
                  "type": "number",
                  "min": 10,
                  "max": 3000
                }
              },
              "required": [
                "Amount"
              ]
            },
            {
              "type": "object",
              "properties": {
                "Pay_Method_Id": {
                  "type": "integer"
                },
                "Scheduled_Date": {
                  "type": "string",
                  "format": "date"
                }
              },
              "required": [
                "Pay_Method_Id"
              ]
            }
          ]
        }
      ]
    }
  }
}